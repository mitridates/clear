{#
    System parameter. Edit
    @controller Dashboard:BackendSystemParameterController:editAction
    @route /parameter/edit/{id}
    @path admin_system_parameter_edit
    @var FormView form
    @var FormView delete_form
#}
{% do addCrumb('system_parameter.index.title'|trans({},'cavepages'), path('admin_system_parameter_index')) %}
{% do initPage(
    'system_parameter',
    'edit',
    'system_parameter.edit.title'|trans({},'cavepages'))
        .set('heading', 'system_parameter.edit.heading'|trans({},'cavepages'))
%}

{% extends '@admin/base.html.twig' %}
{% block subheading %}
{% include '@admin/system_parameter/subheading_buttons.html.twig'%}
{% endblock %}

{% block content %}
    {{ form_start(form) }}

    {% include '@admin/system_parameter/system_parameter_form.html.twig' %}

    <div class="form-row d-flex justify-content-center">
        {% include '@object/bttn/bttn_save.html.twig' with {'class': 'js-submit'}%}
    </div>
        {{ form_end(form) }}

{% endblock %}
{% block footer_javascripts %}

    <script>
        JXhrSubmit("#{{form.vars.attr.id }}");
        let organisations= document.querySelectorAll('.js-organisation');
        for(let i=0; i<organisations.length; i++){
            JSuggest(organisations[i]);
        }
        </script>
{% endblock %}
