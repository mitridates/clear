{#
Render Journal Article fields
@var FormView form
#}
{% set fields= [
    'title', 'subtitle','containertitle', 'content' , 'contributor',
    'access', 'date', 'publisher', 'href',  'comment']%}
{% import '@admin/citation/input_render/macro_input.html.twig' as macroInput %}
{% for name in fields%}
    {% if name=='subtitle' %}
    {{ macroInput.renderSubtitleInput(form, {inline:true}) }}
        {% elseif name=='access' %}
            {{ macroInput.renderDate(form, 'publication') }}
        {% elseif name=='date' %}
            {{ macroInput.renderDate(form, 'access', true) }}
        {% elseif name=='href' %}
            {{ macroInput.renderHrefInput(form, {inline:true}) }}
        {% elseif name=='comment' and form.comment is defined %}
                {{ macroInput.renderComment(form.comment, 'annotation', {inline:true}) }}
        {% elseif name=='content'%}
            {{ macroInput.renderComment(form.content, 'description', {inline:true}) }}
        {% elseif name=='contributor'%}
            {{ macroInput.renderRegularInput(form[name]) }}
        {% endif %}

        {% if form[name] is defined and form[name].rendered==false %}
            {{ macroInput.renderRegularInput(form[name], {inline:true}) }}
        {% endif %}
{% endfor %}