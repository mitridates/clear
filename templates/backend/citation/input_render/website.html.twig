{#
Render Journal Article fields
@var FormView form
#}
{% set fields= [
    'title', 'containertitle', 'date', 'access','publisher', 'href', 'comment']%}
{% import '@admin/citation/input_render/macro_input.html.twig' as macroInput %}
{% for name in fields%}
        {% if name=='access' %}
            {{ macroInput.renderDate(form, 'publication') }}
        {% elseif name=='date' %}
            {{ macroInput.renderDate(form, 'access', true) }}
        {% elseif name=='href' %}
            {{ macroInput.renderHrefInput(form, {inline:true}) }}
        {% elseif name=='comment' and form.comment is defined %}
                {{ macroInput.renderComment(form.comment) }}
        {% endif %}

        {% if form[name] is defined and form[name].rendered==false %}
            {{ macroInput.renderRegularInput(form[name], {inline:true}) }}
        {% endif %}
{% endfor %}