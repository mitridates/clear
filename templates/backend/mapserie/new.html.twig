{#
Mapserie. New
@controller BackendMapserieController:newAction
@route admin/mapserie/new/
@path admin_mapserie_new
@var FormView form
#}
{% do addCrumb('mapserie.index.title'|trans({},'cavepages'), path('admin_mapserie_index')) %}
{% set page= initPage(
    'mapserie',
    'new',
    'mapserie.new.title'|trans({},'cavepages'),
    path('admin_mapserie_new'))
    .set('heading', 'mapserie.new.heading'|trans({},'cavepages'))
%}
{% extends '@admin/base.html.twig' %}
{% block subheading %}
    {% include '@admin/mapserie/subheading_buttons.html.twig'%}
{% endblock %}
{% block content %}
    {% include '@admin/mapserie/mapserie_form.html.twig' %}
    {% if not form.vars.valid %}
        {% include '@object/modal/errors.html.twig'%}
    {% endif %}
{% endblock %}

{% block footer_javascripts %}
<script>
    {% if not form.vars.valid %}
    bootstrap.Modal.getOrCreateInstance(document.querySelector('#modal-errors')).show();
    {% endif %}
    JSuggest(document.querySelector('.js-organisation'));
</script>
{% endblock %}
