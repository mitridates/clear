{%- set attr= (attr ?? {})|merge({
        'type':   attr.type ?? type|default('button'),
        'id': attr.id ?? id|default(''),
        'title': attr.title ?? title|default(''),
        'class':  'btn btn-warning btn-outline-default js-clear'~(' '~attr.class ?? '')~(' '~class??''),
        'onClick':  attr.onClick ?? onClick|default(''),
}) -%}
<button {% for key, value in attr|filter(value => value != '') %} {{ key }}="{{ value|raw }}" {% endfor %}><i class="fa fa-save"></i> {{ text|default('btn.clear'|trans({},'cavemessages'))|raw -}}</button>