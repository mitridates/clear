{%- set attr= (attr ?? {})|merge({
    'type':   attr.type ?? type|default('submit'),
    'id': attr.id ?? id|default(''),
    'title': attr.title ?? title|default(''),
    'class':    'btn btn-primary btn-outline-default js-submit'~(' '~attr.class ?? '')~(' '~class??''),
    'onClick':  attr.onClick ?? onClick|default(''),
}) -%}
<button {% for key, value in attr|filter(value => value != '') %} {{ key }}="{{ value|raw }}" {% endfor %}><i class="fa fa-database"></i>&nbsp;{{ text|default('btn.submit'|trans({},'cavemessages'))|raw -}}</button>