{#
Area. New
@controller AreaController:newAction
@route admin/area/new
@path admin_area_new
@var FormView form
#}
{% do addCrumb('area.index.title'|trans({},'cavepages'), path('admin_area_index')) %}
{% set page= initPage(
    'area',
    'new',
    'area.new.title'|trans({},'cavepages'),
    path('admin_area_new'))
    .set('heading', 'area.new.heading'|trans({},'cavepages'))
%}
{% extends '@admin/base.html.twig' %}
{% block subheading %}
    {% include '@admin/area/subheading_buttons.html.twig'%}
{% endblock %}

{% block content %}
    {% include '@admin/area/_form.html.twig' %}
    {% if not form.vars.valid %}
        {% include '@object/modal/errors.html.twig'%}
    {% endif %}
{% endblock %}
{% block footer_javascripts %}
    <script>
        {% if not form.vars.valid %}
            bootstrap.Modal.getOrCreateInstance(document.querySelector('#modal-errors')).show();
        {% endif %}
        (new Repopulate('#{{ form.country.vars.id }}')).populate();
    </script>
{% endblock %}