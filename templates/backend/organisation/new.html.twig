{#
Organisation. New
@controller OrganisationController:newAction
@route admin/organisation/new/
@path admin_organisation_new
@var FormView form
#}
{% do addCrumb('organisation.index.title'|trans({},'cavepages'), path('admin_organisation_index')) %}
{% set page= initPage(
    'organisation',
    'new',
    'organisation.new.title'|trans({},'cavepages'),
    path('admin_organisation_new'))
    .set('heading', 'organisation.new.heading'|trans({},'cavepages'))
%}
{% extends '@admin/base.html.twig' %}
{% block subheading %}
    {% include '@admin/organisation/subheading_buttons.html.twig'%}
{% endblock %}
{% block content %}
    {% include '@admin/organisation/organisation_form.html.twig' %}
    {% if not form.vars.valid %}
        {% include '@object/modal/errors.html.twig'%}
    {% endif %}
{% endblock %}

{% block footer_javascripts %}
    <script>
        {% if not form.vars.valid %}
        bootstrap.Modal.getOrCreateInstance(document.querySelector('#modal-errors')).show();
        {% endif %}
        (new Repopulate('#{{ form.country.vars.id }}')).populate();
        (new Repopulate('#{{ form.countryaddress.vars.id }}')).populate();
        JSuggest(document.querySelector('.js-organisation'));
    </script>
{% endblock %}
